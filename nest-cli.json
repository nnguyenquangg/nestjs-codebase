{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true ,
    "assets": [
      {
        "include": "**/*.html",
        "watchAssets": true
      },
      {
        "include": "statics/*",
        "watchAssets": true
      },
      {
        "include": "statics/i18n/*",
        "watchAssets": true
      },
      {
        "include": "microservices/proto/*",
        "watchAssets": true
      },
      { 
        "include": "i18n/**/*",
       "watchAssets": true
      }
    ]
  }
}
